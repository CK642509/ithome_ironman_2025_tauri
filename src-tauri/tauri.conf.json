{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ithome_ironman_2025_tauri",
  "version": "0.1.0",
  "identifier": "com.ck642509.ithome_ironman_2025_tauri",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "我的第一個 Tauri 應用",
        "url": "/main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false
      },
      {
        "label": "splashscreen",
        "title": "我的第一個 Splashscreen",
        "url": "/splash",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../public/sample.txt"]
  }
}
